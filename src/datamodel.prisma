type User {
  id: ID! @id
  avatar: String
  username: String! @unique
  email: String! @unique
  firstName: String
  lastName: String
  bio: String
  following: [User!]! 
  followers: [User!]! 
  posts: [Post!]! 
  likes: [Like!]! 
  comments: [Comment!]!
  rooms: [Room!]!
  loginSecret: String
  // createAt: DateTime!
  // updatedAt: DateTime!
}

type Post {
  id: ID! @id
  location: String
  caption: String!
  user: User!
  files: [File!]!
  likes: [Like!]!
  comments: [Comment!]!
  // createAt: DateTime!
  // updatedAt: DateTime!
}

type Like {
  id: ID! @id
  user: User!
  post: Post!
  // createAt: DateTime!
  // updatedAt: DateTime!
}

type Comment {
  id: ID! @id
  text: String!
  user: User!
  post: Post!
  // createAt: DateTime!
  // updatedAt: DateTime!
}

type File {
  id: ID! @id
  url: String!
  post: Post!
  // createAt: DateTime!
  // updatedAt: DateTime!
}

type Room {
  id: ID! @id
  participants: [User!]!
  messages: [Message!]!
  // createAt: DateTime!
  // updatedAt: DateTime!
}

type Message {
  id: ID! @id
  text: String!
  from: User! 
  to: User! 
  room: Room!
  // createAt: DateTime!
  // updatedAt: DateTime!
}